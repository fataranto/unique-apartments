                      </div>     
                      
                      <!-- Lastname input -->
                      <div class="form-outline mb-4">
                        
                        <input type="text" id="form1Example1" class="form-control" name="lastname"/>
                        <label class="form-label" for="form1Example1">Last name</label>
                      </div>                     
                      
                      <!-- Email input -->
                      <div class="form-outline mb-4">
                        
                        <input type="email" id="form1Example1" class="form-control" name="email"/>
                        <label class="form-label" for="form1Example1">Email</label>
                      </div>
      
                      <!-- Password input -->
                      <div class="form-outline mb-4">
                        <input type="password" id="form1Example2" class="form-control" name="password" aria-label="Password" required/>
