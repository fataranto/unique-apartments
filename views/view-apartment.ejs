  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/js/bootstrap.bundle.min.js"></script>

  <script> 
  //load map
    var map = L.map('map').setView([ <%= apartment.location.lat %> , <%= apartment.location.long %> ], 13);

    L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
      attribution: '&copy; <a href="https://www.openstreetmap.org/copyright">OpenStreetMap</a> contributors'
    }).addTo(map);

    L.marker([ <%= apartment.location.lat %> , <%= apartment.location.long %> ]).addTo(map)
      .bindPopup('<%=apartment.title%>')
      .openPopup();
    map.flyTo([ <%= apartment.location.lat %> , <%= apartment.location.long %> ], 15);
  </script>

<script>
  //validate dates

  var checkin = document.getElementById('checkin');
  var checkout = document.getElementById('checkout');

  checkin.value = new Date().toISOString().split('T')[0];

  checkin.addEventListener('focus', function() {
    const checkoutDate = checkout.valueAsDate;
    const maxDate = new Date(Number(checkoutDate));
    maxDate.setDate(checkoutDate.getDate() - 1);    
    this.max = maxDate.toISOString().split('T')[0];
  }); 

  //check out must be at least ONE DAY more than check in
  checkout.addEventListener('focus', function() {
    const checkinDate = checkin.valueAsDate;
    const minDate = new Date(Number(checkinDate));
    minDate.setDate(checkinDate.getDate() + 1);
    this.min = minDate.toISOString().split('T')[0];
  }); 

  checkin.addEventListener('change', calculatePrice);

  checkout.addEventListener('change', calculatePrice);


   //despues de seleccionar la fecha de checkout, calculamos la cantidad de noches que se reservan
   function calculatePrice() {
    const checkinDate = checkin.valueAsDate;
    const checkoutDate = checkout.valueAsDate;
    if (checkinDate && checkoutDate) {
      const diff = checkoutDate - checkinDate;
      const nights = Math.floor(diff / (1000 * 60 * 60 * 24));
      const thePrice = <%= apartment.price %>;
      const total = nights * thePrice;
      const showTotal = document.getElementById('total');
      showTotal.innerHTML = '';
      showTotal.innerHTML = `<p class="small"><span class="fw-bold" >Total: </span>${thePrice} € x ${nights} nights = ${total} €</p>`;
      console.log(checkinDate);
      console.log("total: ", total);
      console.log("nights: ", nights);
    }
  }; 

</script>



