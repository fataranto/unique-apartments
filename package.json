{
  "name": "unique-apartments",
  "version": "1.0.0",
  "description": "Node.js + MongoDB: JWT app to publish and rent touristic appartments with authentication",
  "main": "server.js",
  "scripts": {
    "build-css": "sass --watch src/scss/main.scss:public/stylesheets/style.css",
    "css-prefix": "npx postcss public/stylesheets/*.css --use autoprefixer -d build/",
    "css-purge": "purgecss --keyframes --css public/stylesheets/style.css --content views/*.ejs \"node_modules/bootstrap/js/dist/{util,modal}.js\" --output public/stylesheets/",
    "start": "node server.js",
    "dev": "nodemon server.js"
  },
  "keywords": [
    "node.js",
    "express",
    "jwt",
    "login",
    "registration",
    "authentication",
    "authorization",
    "mongodb",
    "mongoose"
  ],
  "author": "FT",
  "license": "ISC",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "bootstrap": "^5.1.3",
    "cookie-session": "^1.4.0",
    "cors": "^2.8.5",
    "ejs": "^3.1.8",
    "express": "^4.17.1",
    "googleapis": "^107.0.0",
    "jsonwebtoken": "^8.5.1",
    "moment": "^2.29.4",
    "mongoose": "^5.13.13",
    "nodemailer": "^6.7.8"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.7",
    "nodemon": "^2.0.19",
    "postcss": "^8.4.14",
    "postcss-cli": "^10.0.0",
    "purgecss": "^4.1.3"
  }
}
