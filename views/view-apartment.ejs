            style="color: #484848;" method="POST"
            action="/apartment/<%= apartment._id %>/book">
            <h4 class="mt-3 text-center" >Make a reservation</h4>

            <!-- check in - check out -->
            <div class="input-group-prepend" style=" font-size: small;">
              <label>CHECK IN</label> &emsp; &emsp; &emsp;
              <label>CHECK OUT</label><br>
            </div>
            <div class="input-group" style=" font-size: small;">


              <input class="form-control" style="font-size: 0.8rem;" type="date" min="2022-01-01" onfocus="this.min=new Date().toISOString().split('T')[0]" id="checkin" name="checkin" required/>

              <input class="form-control" style="font-size: 0.8rem;" type="date" min="2022-01-01" onfocus="this.min=new Date().toISOString().split('T')[0]" id="checkout" name="checkout" required/>
            </div>

            <br>
            <div class="form-group" style=" font-size: small;">
              <label>GUESTS</label><br>
              <input type="number" class="form-control" min=1 value=1 name="guests" required>
              <br>
            </div>
            <p id="total"></p>


            <!-- submit button -->
            <div class="form-group">
              <button type="submit" class="btn btn-primary btn-lg" style="float: right;">Book now</button>
            </div>

          </form>

        </div>
      </div>

